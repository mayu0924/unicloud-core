<?xml version="1.0" encoding="utf-8"?>
<com.unicloud.core.widget.ULinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.unicloud.core.widget.UToolbar
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:background_normal="@array/array_bl_tr"
        app:buttonGravity="center_vertical"
        app:contentInsetStartWithNavigation="10dp"
        app:gradient_orientation="LEFT_RIGHT"
        app:gradient_type="linear"
        app:navigationIcon="@mipmap/ic_back_white"
        app:subtitle="@string/app_name"
        app:subtitleTextColor="#FFFFFF"
        app:title="UToolbar"
        app:titleTextColor="#FFFFFF" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.unicloud.core.view.image.UNIImageView
                android:id="@+id/nice_iv0"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_image"
                app:uni_image_corner_radius="20dp" />

            <com.unicloud.core.view.image.UNIImageView
                android:id="@+id/nice_iv1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_image"
                app:uni_image_border_color="#FF7F24"
                app:uni_image_border_width="2dp"
                app:uni_image_corner_radius="20dp" />

            <com.unicloud.core.view.image.UNIImageView
                android:id="@+id/nice_iv2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_image"
                app:uni_image_border_color="#FF7F24"
                app:uni_image_border_width="2dp"
                app:uni_image_corner_bottom_left_radius="10dp"
                app:uni_image_corner_bottom_right_radius="60dp"
                app:uni_image_corner_top_left_radius="60dp"
                app:uni_image_corner_top_right_radius="10dp" />

            <com.unicloud.core.view.image.UNIImageView
                android:id="@+id/nice_iv3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_image"
                app:uni_image_is_circle="true" />

            <com.unicloud.core.view.image.UNIImageView
                android:id="@+id/nice_iv4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_image"
                app:uni_image_border_color="#FF7F24"
                app:uni_image_border_width="4dp"
                app:uni_image_is_circle="true" />


            <com.unicloud.core.view.image.UNIImageView
                android:id="@+id/nice_iv5"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/ic_image"
                app:uni_image_border_color="#008B45"
                app:uni_image_border_width="2dp"
                app:uni_image_corner_radius="20dp"
                app:uni_image_inner_border_color="#FF7F24"
                app:uni_image_inner_border_width="4dp"
                app:uni_image_is_circle="true" />

        </LinearLayout>

    </ScrollView>
</com.unicloud.core.widget.ULinearLayout>
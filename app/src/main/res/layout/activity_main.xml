<?xml version="1.0" encoding="utf-8"?>
<com.unicloud.core.widget.ULinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <com.unicloud.core.widget.UToolbar
        android:id="@+id/toolBar"
        style="@style/ToolBar.Home"
        app:centerTitle="true"
        app:menu="@menu/menu_main"
        app:subtitle=""
        app:title="这是一个居中的标题啊啊啊" />

    <com.unicloud.core.widget.UTextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:text="标题"
        android:textColor="@color/red"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <com.unicloud.core.view.button.UNIButton
            android:id="@+id/uniBtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:text="UNIButton"
            android:textColor="#FFFFFF"
            app:uni_btn_corner_radius="10dp"
            app:uni_btn_end_color="@color/colorPrimary"
            app:uni_btn_isHole="false"
            app:uni_btn_start_color="@color/colorAccent" />

        <com.unicloud.core.view.button.UNIButton
            android:id="@+id/uniText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:text="UNIText"
            android:textColor="#FFFFFF"
            app:uni_btn_corner_radius="10dp"
            app:uni_btn_end_color="@color/colorRed"
            app:uni_btn_isHole="false"
            app:uni_btn_start_color="@color/colorRed_light" />

        <com.unicloud.core.view.button.UNIButton
            android:id="@+id/uniDrawableText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:text="UNIDrawableText"
            android:textColor="#FFFFFF"
            app:uni_btn_corner_radius="10dp"
            app:uni_btn_end_color="@color/colorRed"
            app:uni_btn_isHole="false"
            app:uni_btn_start_color="@color/colorPrimaryDark" />

        <com.unicloud.core.view.button.UNIButton
            android:id="@+id/uniImageView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:text="UNIImageView"
            android:textColor="#FFFFFF"
            app:uni_btn_corner_radius="10dp"
            app:uni_btn_end_color="@color/colorAccent"
            app:uni_btn_isHole="false"
            app:uni_btn_start_color="@color/colorPrimaryDark" />


        <com.unicloud.core.widget.UButton
            android:id="@+id/rButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="RWidget"
            android:textColor="#fff"
            android:textSize="18dp"
            app:background_normal="@array/array_l_r"
            app:corner_radius="10dp"
            app:gradient_orientation="LEFT_RIGHT"
            app:gradient_type="linear"
            app:ripple="true" />

        <com.unicloud.core.widget.UButton
            android:id="@+id/request"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="request"
            android:textColor="#fff"
            android:textSize="18dp"
            app:background_normal="@array/array_l_r"
            app:corner_radius="10dp"
            app:gradient_orientation="LEFT_RIGHT"
            app:gradient_type="linear"
            app:ripple="true" />

        <com.unicloud.core.widget.UButton
            android:id="@+id/requestRepeat"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="requestRepeat"
            android:textColor="#fff"
            android:textSize="18dp"
            app:background_normal="@array/array_l_r"
            app:corner_radius="10dp"
            app:gradient_orientation="LEFT_RIGHT"
            app:gradient_type="linear"
            app:ripple="true" />
        <com.unicloud.core.widget.UEditText
            android:id="@+id/uText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_marginTop="10dp"
            app:background_normal="#fefefe"
            app:corner_radius="4dp"
            app:border_color_normal="@color/orange"
            app:border_width_normal="1px"
            android:text="@string/app_name"
            android:gravity="center"
            android:textColor="@color/red"/>
    </LinearLayout>
</com.unicloud.core.widget.ULinearLayout>


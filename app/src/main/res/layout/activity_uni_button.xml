<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <com.unicloud.core.view.button.UNIButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/colorRed"
            android:text="UNIButton_original"
            android:textColor="#FFFFFF"
            app:uni_btn_original="true" />

        <com.unicloud.core.view.button.UNIButton
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:enabled="false"
            android:text="UNIButton"
            android:textColor="#FFFFFF"
            app:uni_btn_corner_radius="10dp"
            app:uni_btn_end_color="@color/colorPrimary"
            app:uni_btn_isHole="false"
            app:uni_btn_start_color="@color/colorAccent" />

        <com.unicloud.core.view.button.UNIButton
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="UNIButton"
            android:textColor="#FFFFFF"
            app:uni_btn_corner_radius="22.5dp"
            app:uni_btn_end_color="@color/colorPrimary"
            app:uni_btn_isHole="false"
            app:uni_btn_start_color="@color/colorAccent" />

        <com.unicloud.core.view.button.UNIButton
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="UNIButton"
            android:textColor="#FFFFFF"
            app:uni_btn_corner_radius="10dp"
            app:uni_btn_end_color="@color/colorPrimary"
            app:uni_btn_isHole="false"
            app:uni_btn_start_color="@color/colorAccent" />

        <com.unicloud.core.view.button.UNIButton
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="UNIButton"
            android:textColor="#FFFFFF"
            app:uni_btn_end_color="@color/colorPrimary"
            app:uni_btn_isHole="false"
            app:uni_btn_start_color="@color/colorAccent" />

        <com.unicloud.core.view.button.UNIButton
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="UNIButton"
            android:textColor="#FFFFFF"
            app:uni_btn_corner_radius_br="10dp"
            app:uni_btn_corner_radius_tr="10dp"
            app:uni_btn_end_color="@color/colorPrimary"
            app:uni_btn_isHole="false"
            app:uni_btn_start_color="@color/colorAccent" />

        <com.unicloud.core.view.button.UNIButton
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="UNIButton_RIGHT_LEFT"
            android:textColor="#FFFFFF"
            app:uni_btn_corner_radius="10dp"
            app:uni_btn_end_color="@color/colorPrimary"
            app:uni_btn_gradient_orientation="RIGHT_LEFT"
            app:uni_btn_isHole="false"
            app:uni_btn_start_color="@color/colorAccent" />

        <com.unicloud.core.view.button.UNIButton
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="UNIButton"
            android:textColor="@color/colorPrimary"
            app:uni_btn_corner_radius_bl="10dp"
            app:uni_btn_corner_radius_tl="10dp"
            app:uni_btn_end_color="@color/colorPrimary"
            app:uni_btn_isHole="true"
            app:uni_btn_start_color="@color/colorAccent" />

        <com.unicloud.core.view.button.UNIButton
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="UNIButton"
            android:textColor="@color/colorPrimary"
            app:uni_btn_corner_radius="10dp"
            app:uni_btn_end_color="@color/colorPrimary"
            app:uni_btn_isHole="true"
            app:uni_btn_start_color="@color/colorAccent" />

        <com.unicloud.core.view.button.UNIButton
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="UNIButton"
            android:textColor="@color/colorPrimary"
            app:uni_btn_corner_radius="22.5dp"
            app:uni_btn_end_color="@color/colorPrimary"
            app:uni_btn_isHole="true"
            app:uni_btn_start_color="@color/colorAccent" />
    </LinearLayout>
</ScrollView>
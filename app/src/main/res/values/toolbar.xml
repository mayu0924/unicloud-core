<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="popup_theme" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <!--遮挡属性再次-->
        <item name="overlapAnchor">false</item>
<!--        <item name="android:dropDownWidth">0dp</item>-->
        <item name="android:dropDownWidth">wrap_content</item>
        <!--<item name="android:background">@drawable/ic_menu_bg</item>-->
        <item name="android:popupBackground">#000000</item>

        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">0dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="iconTint">@android:color/black</item>
        <!--        <item name="android:dropDownListViewStyle">@android:style/Widget.DropDownItem</item>-->
    </style>

    <style name="OverFlowMenuButton">
        <!--替换需要的图标-->
        <item name="android:src">@mipmap/ic_toolbar_more_white</item>
    </style>

    <!--     toolbar标题样式-->
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarSubTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#42FFFFFF</item>
    </style>

    <style name="ToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="elevation">2dp</item>
        <item name="buttonGravity">center_vertical</item>


        <!--    自定义ToolBar背景    -->
        <item name="background_normal">@array/toolbar</item>
        <item name="gradient_orientation">LEFT_RIGHT</item>
        <item name="gradient_type">linear</item>

        <!--OverFlow图标style-->
        <item name="android:actionOverflowButtonStyle">@style/OverFlowMenuButton</item>
        <!--控制遮挡和背景色等-->
        <item name="popupTheme">@style/popup_theme</item>

        <item name="titleTextAppearance">@style/ToolbarTitle</item>
        <item name="subtitleTextAppearance">@style/ToolbarSubTitle</item>
    </style>

    <style name="ToolBar.Back">
        <item name="navigationIcon">@mipmap/common_backbtn_normal</item>
    </style>

    <style name="ToolBar.Back.White">
        <item name="navigationIcon">@mipmap/ic_back_white</item>
    </style>

    <style name="ToolBar.Home">
        <!-- 标题边距和样式-->
        <item name="titleMarginStart">10dp</item>
        <item name="android:paddingStart">10dp</item>
<!--        <item name="logo">@mipmap/logo2</item>-->
    </style>

</resources>